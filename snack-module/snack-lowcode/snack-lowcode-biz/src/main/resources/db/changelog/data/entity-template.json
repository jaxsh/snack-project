{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "实体定义模板",
    "properties": {
        "schemaName": {
            "type": "string",
            "title": "实体名称",
            "description": "驼峰命名",
            "pattern": "^[A-Z][a-zA-Z0-9]*$",
            "x-component": "Input",
            "x-component-props": {
                "placeholder": "如: SysProduct"
            }
        },
        "tableName": {
            "type": "string",
            "title": "表名",
            "description": "下划线命名",
            "pattern": "^[a-z][a-z0-9_]*$",
            "x-component": "Input",
            "x-component-props": {
                "placeholder": "如: sys_product"
            }
        },
        "label": {
            "type": "string",
            "title": "显示名称",
            "x-component": "Input",
            "x-component-props": {
                "placeholder": "如: 商品"
            }
        },
        "description": {
            "type": "string",
            "title": "描述",
            "x-component": "TextArea"
        }
    },
    "required": [
        "schemaName",
        "tableName",
        "label"
    ]
}